<!DOCTYPE html>
<html ng-app="StMark">
  <head>

    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="/libs/jquery/dist/jquery.min.js"></script>
    <script src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="/libs/angular/angular.min.js"></script>
    <script src="/libs/angular-route/angular-route.min.js"></script>

    <script src="/libs/angular-ui-notification/dist/angular-ui-notification.min.js"></script>

    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/libs/angular-ui-notification/dist/angular-ui-notification.min.css" />
    <link rel="stylesheet" href="/libs/css-hamburgers/dist/hamburgers.min.css" />

    <link rel="stylesheet" href="/css/feeds.css" />
    <link rel='stylesheet' href='/css/style.css' />

  </head>
  <body ng-controller="MainController">

    <nav class="navbar navbar-default" ng-controller="NavbarController">
      <div class="container">
        <div class="navbar-header">
          <div class="visible-xs">
            <button hamburger-button class="hamburger hamburger--collapse navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" type="button">
              <span class="hamburger-box">
                <span class="hamburger-inner"></span>
              </span>
            </button>
          </div>
          <a class="navbar-brand" href="#">
            <img alt="St.Mark" ng-src="{{  }}">
          </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" ng-if="isAuth">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="" ng-click="logout()">Logout</a></li>
          </ul>
        </div>
      </div>
    </nav> <!-- navbr -->

    <div class="container">
      <ng-view></ng-view> <!-- views -->
    </div>

    <script src="/js/app.js"></script> <!-- angular module -->
    <script src="/js/controllers/main.controller.js"></script>
    <script src="/js/controllers/user.controller.js"></script>
    <script src="/js/controllers/feeds.controller.js"></script>
    <script src="/js/controllers/navbar.controller.js"></script> <!-- controllers -->
    <script src="/js/directives/hamburger-button.directive.js"></script>
    <script src="/js/directives/textarea-share.directive.js"></script>
    <script src="/js/directives/fixed-share-box.directive.js"></script> <!-- directives -->
    <script src="/js/services/auth-interceptor.service.js"></script> <!-- interceptor -->
    <script src="/js/services/user-requests.service.js"></script>
    <script src="/js/services/feeds-requests.service.js"></script> <!-- services -->

  </body>
</html>
